<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsCorpSampleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorIcon">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="textAppearanceBody1">@style/TextAppearance.NewsCorp.Body1</item>

        <item name="textAppearanceSubTitle1">@style/TextAppearance.NewsCorp.SubTitle1</item>
        <item name="textAppearanceTitle1">@style/TextAppearance.NewsCorp.Title1</item>
        <item name="textAppearanceSubTitle1Bold">@style/TextAppearance.NewsCorp.SubTitle1.Bold</item>
        <item name="textAppearanceTitle1Bold">@style/TextAppearance.NewsCorp.Title1.Bold</item>
        <item name="textAppearanceDescription">@style/TextAppearance.NewsCorp.Description</item>

    </style>
</resources>